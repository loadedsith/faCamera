<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:rim="http://www.blackberry.com/ns/widgets"
  id="com.rga.facamera"
  version="0.0.1">
  
  <name>FaCamera</name>
  <description>PhoneGap plugin to support a custom camera overlay with multiple image captures per camera session.</description>
  <author>Vote 539 and others</author>
  
  <info>
    With the addition of multiple image captures per camera session;
    This plugin was written with the tutorial found at:
    http://codrspace.com/vote539/writing-a-custom-camera-plugin-for-phonegap/
  </info>
  
  <js-module src="www/js/faCamera.js" name="FaCamera">
    <clobbers target="navigator.CustomCamera" />
  </js-module>
  
  <engines>
    <engine name="cordova" version=">=3.1.0" />
  </engines>
  
  <platform name="ios">
    
    <!-- config file -->
    <config-file target="config.xml" parent="/*">
      <feature name="FaCamera">
        <param name="ios-package" value="FaCamera" />
      </feature>
    </config-file>
    
    <!-- core CustomCamera header and source files -->
    <header-file src="platforms/ios/FaCamera/Classes/FaCamera.h" />
    <header-file src="platforms/ios/FaCamera/Classes/FaCameraViewController.h" />
    <source-file src="platforms/ios/FaCamera/Classes/FaCamera.m" />
    <source-file src="platforms/ios/FaCamera/Classes/FaCameraViewController.m" />
  <resource-file src="platforms/ios/FaCamera/Classes/FaCameraViewController.xib" />
    
  </platform>
  
</plugin>